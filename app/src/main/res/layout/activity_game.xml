<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorBackground"
    android:id="@+id/relativeLayout">


    <GridLayout
        android:layout_width="400dp"
        android:layout_height="600dp"
        android:columnCount="5"
        android:orientation="vertical"
        android:rowCount="10">

        <TextView
            android:id="@+id/textView7"
            android:layout_gravity="center|top"
            android:layout_column="0"
            android:layout_row="0"
            android:text="Pot" />

        <TextView
            android:id="@+id/textView8"
            android:layout_gravity="center|top"
            android:layout_column="1"
            android:layout_columnSpan="3"
            android:layout_row="0"
            android:text="Dealer" />

        <TextView
            android:id="@+id/textView9"
            android:layout_gravity="center|top"
            android:layout_column="4"
            android:layout_row="0"
            android:text="Winnings" />

        <EditText
            android:id="@+id/pot_et"
            android:layout_column="0"
            android:layout_row="1"
            android:width="100dp"
            android:height="20dp"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/dealer_et"
            android:layout_column="1"
            android:layout_columnSpan="3"
            android:layout_row="1"
            android:width="200dp"
            android:height="20dp"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/winnings_et"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="4"
            android:layout_row="1"
            android:width="100dp"
            android:height="20dp"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:layout_column="0"
            android:layout_columnSpan="5"
            android:layout_row="2"
            android:text="House Hand" />

        <EditText
            android:id="@+id/house_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnSpan="5"
            android:layout_row="3"
            android:height="20dp"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnSpan="5"
            android:layout_gravity="center|top"
            android:layout_row="4"
            android:text="Player's Hand" />

        <EditText
            android:id="@+id/player_et"
            android:layout_width="match_parent"
            android:layout_columnSpan="5"
            android:layout_row="5"
            android:height="20dp"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/hit_btn"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_marginLeft="30dp"
            android:layout_row="6"
            android:width="150dp"
            android:height="150dp"
            android:text="Hit" />

        <Button
            android:id="@+id/hold_btn"
            android:layout_column="3"
            android:layout_columnSpan="2"
            android:layout_marginLeft="30dp"
            android:layout_row="6"
            android:width="150dp"
            android:height="150dp"
            android:text="Hold" />

        <Button
            android:id="@+id/schuffle_btn"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_marginLeft="30dp"
            android:layout_row="7"
            android:width="150dp"
            android:height="150dp"
            android:text="Shuffle" />

        <Button
            android:id="@+id/deal_btn"
            android:layout_column="3"
            android:layout_columnSpan="2"
            android:layout_marginLeft="30dp"
            android:layout_row="7"
            android:width="150dp"
            android:height="150dp"
            android:text="Deal" />

        <Button
            android:id="@+id/score_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnSpan="5"
            android:layout_row="8"
            android:text="Finish / View Highscores"
            android:textColor="#a42020" />

    </GridLayout>

</RelativeLayout>
